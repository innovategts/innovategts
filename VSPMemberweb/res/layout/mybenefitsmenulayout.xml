<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vspmemberweb.MyBenefitsActivity" >
    
    <ImageView
        android:id="@+id/vsp_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vsplogo" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vsp_logo"
        android:orientation="vertical" >

        <Button
            android:id="@+id/vsp_wellvision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="VSP Wellvision"
            android:textSize="20sp" />

        <Button
            android:id="@+id/additional_eyecare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="Additional Eyecare"
            android:textSize="20sp" />

        <Button
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="Contacts"
            android:textSize="20sp" />
        
        <Button
            android:id="@+id/computer_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="Computer Vision"
            android:textSize="20sp" />

        <Button
            android:id="@+id/specialty_eyecare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="Specialty Eyecare"
            android:textSize="20sp" />

        <Button
            android:id="@+id/eyeconic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:layout_weight="0.28"
            android:maxLines="1"
            android:text="Eyeconic"
            android:textSize="20sp" />
    </LinearLayout>
    
</RelativeLayout>